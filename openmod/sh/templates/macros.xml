{% macro render_field(field) %}
  <dt> {{ field.label }} </dt>
  <dd> {{ field(**kwargs)|safe }}
  {% if field.errors %}
    <ul class=errors>
    {% for error in field.errors %}
      <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
  </dd>
{% endmacro %}

{% macro tags(element) %}
  {% for tag in element.tags %}
    <tag k="{{tag.key}}" v="{{tag.value}}"/>
  {% endfor %}
{% endmacro %}

